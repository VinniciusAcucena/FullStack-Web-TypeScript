generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Band {
  id   String @id @default(uuid()) @db.Uuid
  name String @unique
  slug String @unique
  status Status @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("bands")
}

model Track {
  id        String   @id @default(uuid()) @db.Uuid
  title     String   
  slug      String   @unique 
  duration  Int
  status    Status   @default(ACTIVE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("tracks")
}

enum Status {
  ACTIVE
  INACTIVE
}
